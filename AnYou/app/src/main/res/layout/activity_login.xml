<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dl_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dl_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x416"
        android:layout_marginTop="@dimen/y392"
        android:src="@drawable/dl_01" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y392"
        android:layout_toRightOf="@id/dl_01"
        android:src="@drawable/dl_02" />

    <ImageView
        android:id="@+id/dl_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x296"
        android:layout_marginTop="@dimen/y575"
        android:src="@drawable/dl_03" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y575"
        android:layout_toRightOf="@id/dl_03"
        android:src="@drawable/dl_04" />

    <LinearLayout
        android:layout_width="@dimen/x566"
        android:layout_height="@dimen/y550"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x203"
        android:layout_marginTop="@dimen/y328"
        android:background="@drawable/bg_edittext"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y70"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:src="@drawable/logo_h"
            android:textSize="@dimen/x40" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="@dimen/x456"
            android:layout_height="@dimen/y73"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/di_ic_02"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="用户名"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="textPersonName"
            android:padding="@dimen/x18"
            android:singleLine="true"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="@dimen/x456"
            android:layout_height="@dimen/y73"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y28"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/dl_ic_1"
            android:drawableRight="@drawable/eye"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="密  码"
            android:imeOptions="actionGo|flagNoExtractUi"
            android:inputType="numberPassword"
            android:padding="@dimen/x18"
            android:singleLine="true"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="@dimen/x470"
            android:layout_height="@dimen/y73"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y20">

            <CheckBox
                android:id="@+id/dl_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/login_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/dl_cb"
                android:text="记住密码"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/login_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/wangjimima"
                android:textColor="#007eee"
                android:textSize="15sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/dl_bt"
            android:layout_width="@dimen/x456"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/selector_login_btn"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>